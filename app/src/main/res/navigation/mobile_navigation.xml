<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.final_project.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.final_project.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/navigation_project_plan"
        android:name="com.example.final_project.ui.gantt_chart.GanttChartFragment"
        android:label="@string/title_project_plan"
        tools:layout="@layout/fragment_gantt_chart" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.final_project.ui.setting.SettingFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_setting" />

</navigation>